<% /* views/person/delete.ejs */ %>

<div class="row justify-content-center">
  <div class="col-md-6">
    <div class="card shadow-sm">
      <div class="card-body">
        <h2 class="card-title text-danger mb-4">Delete Person</h2>
        <div class="alert alert-warning">
          Are you sure you want to delete <strong><%= person.name %></strong>?
        </div>
        <form action="/person/<%= person._id %>?_method=DELETE" method="POST">
          <button type="submit" class="btn btn-danger">Yes, Delete</button>
          <a href="/person" class="btn btn-secondary ms-2">Cancel</a>
        </form>
      </div>
    </div>
  </div>
</div>
